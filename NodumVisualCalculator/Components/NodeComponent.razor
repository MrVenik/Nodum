@if (VisualNode != null)
{
    foreach (var pin in VisualNode.VisualNodePins)
    {
        <NodePinComponent @key="pin" VisualNodePin="@pin" OnNodePinSelect="@((a, n) => OnNodePinSelect(a, n))" OnNodePinConnect="@((a, n) => OnNodePinConnect(a, n))" />
    }
}

@code {
    [Parameter]
    public VisualNode VisualNode { get; set; }
    [Parameter]
    public Action<MouseEventArgs, VisualNodePin> OnNodePinSelect { get; set; }
    [Parameter]
    public Action<MouseEventArgs, VisualNodePin> OnNodePinConnect { get; set; }
}
