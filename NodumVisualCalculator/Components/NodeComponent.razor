@if (Node != null)
{
    foreach (var pin in Node.AllNodePins)
    {
        <NodePinComponent @key="pin" NodePin="@pin" OnNodePinSelect="@((a, n) => OnNodePinSelect(a, n))" OnNodePinConnect="@((a, n) => OnNodePinConnect(a, n))" />
    }
}

@code {
    [Parameter]
    public Node Node { get; set; }
    [Parameter]
    public Action<MouseEventArgs, NodePin> OnNodePinSelect { get; set; }
    [Parameter]
    public Action<MouseEventArgs, NodePin> OnNodePinConnect { get; set; }
}
